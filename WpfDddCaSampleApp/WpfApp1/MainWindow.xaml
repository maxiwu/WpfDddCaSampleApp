<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ContentControl x:Name="TopRegion" Grid.Row="0" Grid.ColumnSpan="3"/>
        <ContentControl x:Name="LeftRegion" Grid.Row="1" Grid.Column="0"/>
        <ContentControl x:Name="CenterRegion" Grid.Row="1" Grid.Column="1"/>
        <ContentControl x:Name="RightRegion" Grid.Row="1" Grid.Column="2"/>
        <ContentControl x:Name="BottomRegion" Grid.Row="2" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
